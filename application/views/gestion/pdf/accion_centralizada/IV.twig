<!DOCTYPE html>
<html>
<head>
	{{ link_tag('assets/css/bootstrap.min.css') }}	
	{{ link_tag('assets/css/general.css') }}
	<style type="text/css">
		.bold{
			font-weight: bold !important;
		}
		.text-right{
			text-align: right;
		}
		.text-left{
			text-align: left;
		}
		.background{
			background-color: #8B1C1C !important;
		}
	</style>
</head>
<body>

	<img src="{{ base_url() ~ 'assets/image/logo_aragua.jpg' }}" alt="" width="140px" height="140px">
	<br>

	<table style="width:100%;text-align: center;margin-top: 0%;" border="0" align="center" cellspacing="1" align="center" class="table table-bordered table-striped table-hover table-condensed dt-responsive table-responsive">
		<tr>
			<td class="bold" style="background-color: #8B1C1C !important;color: #FFFFFF; font-weight: bold;">
				Trimestre IV Año {{ ano_fiscal }}
			</td>
		</tr>
		<tr>
			<td class="bold" style="background-color: #8B1C1C !important;color: #FFFFFF; font-weight: bold;">
				Acción Centralizada
			</td>
		</tr>
		<tr>
			<td class="bold" style="background-color: #8B1C1C !important;color: #FFFFFF; font-weight: bold;">
				I. Datos Básicos de Identificación
			</td>
		</tr>
	</table>
	<table style="width:100%;text-align: center;margin-top: -1.5%;" border="0" align="center" cellspacing="1" align="center" class="table table-bordered table-striped table-hover table-condensed dt-responsive table-responsive">
		<tr>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;width: 20%;">
				Entidad Político-Territorial
			</td>
			<td colspan="3" class="text-left">{{ nom_ins }}</td>
		</tr>
		<tr>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Código</td>
			<td class="text-left">{{ codigo }}</td>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Monto total</td>
			<td class="text-right">{{ monto|number_format(2, ',', '.') }}</td>
		</tr>
		<tr>
			<td class="bold" colspan="4" style="background-color: #8B1C1C !important;color: #FFFFFF; font-weight: bold;">
				II. Metas Físicas
			</td>
		</tr>
		<tr>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">
				Acción Centralizada
			</td>
			<td colspan="3" class="text-left">{{ accion_centralizada }}</td>
		</tr>
		<!--<tr>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;width: 20%;">
				Acción Especifica
			</td>
			<td colspan="3" class="text-left">{{ accion_especifica }}</td>
		</tr>-->
	</table>
	<table style="width:100%;text-align: center;margin-top: -1.5%;" border="0" align="center" cellspacing="1" align="center" class="table table-bordered table-striped table-hover table-condensed dt-responsive table-responsive">
		<tr>
			<td class="bold" style="width: 20%;" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Plan de Actividad</td>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Unidad de Medida</td>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Medio de Verifiación</td>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Cantidad Planificada</td>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Cantidad Ejecutada</td>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">% de Cumplimiento</td>
		</tr>
		{% for row in act_acc %}
			<tr>
				<td style="width: 20%;" class="text-left">{{ row.actividad }}</td>
				<td class="text-left">{{ row.unidad_medida }}</td>
				<td class="text-left">{{ row.medio_verificacion }}</td>
				<td>{{ row.trimestre_iv }}</td>
				<td>{{ row.iv}}</td>
				<td>{{ row.porcentaje }}%</td>
			</tr>
		{% endfor %}
			<!--<tr>
				<td colspan="5"></td>
				<td class='align-center text-right' style='font-weight: bold;'>{{ porcentaje_total }}</td>
			</tr>-->
	</table>
	<!-- Metas financieras -->
	<table style="width:100%;text-align: center;" border="0" align="center" cellspacing="1" align="center" class="table table-bordered table-striped table-hover table-condensed dt-responsive table-responsive">
		<tr>
			<td class="bold" colspan="5" style="background-color: #8B1C1C !important;color: #FFFFFF; font-weight: bold;">
				III. Metas Financieras
			</td>
		</tr>
		<tr>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;width: 20%;">Partida</td>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Descripción</td>
			<td class="bold" style="background-color: #BFBFBF !important;color: #000000; font-weight: bold;text-align: left;">Monto</td>
			<!--<td class="bold">Monto Ejecutado</td>-->
			<!--<td class="bold">% de Cumplimiento</td>-->
		</tr>
		{% set sum_total = 0 %}
		{% for row in meta_financiera %}
		<tr>
			<td style="width: 20%;">{{ row.estructura }}</td>
			<td class="text-left" style="width: 50%;">{{ row.partida }}</td>
			<td class="text-right" style="width: 30%;">{{ row.compromiso|number_format(2, ',', '.') }}</td>
			<!--<td>{{ row.partida }}</td>-->
			<!--<td>% de Cumplimiento</td>-->
		</tr>
		{% set sum_total = sum_total + row.compromiso%}
		{% endfor %}
		<tr>
			<td></td>
			<td></td>
			<td class='align-center text-right' style='font-weight: bold;'>{{ sum_total|number_format(2, '.', ',') }}</td>
		</tr>
	</table>

</body>
</html>